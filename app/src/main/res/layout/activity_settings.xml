<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="apps.advocatecasediary.advocate.Activities.Settings">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="@color/grey_dark"
                android:text="EDIT PROFILE"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:id="@+id/advocateNameIDSettings"
                android:background="@drawable/edit_text_bg"
                android:hint="NAME*"
                android:paddingLeft="20dp"/>

            <EditText
                android:id="@+id/EMAILNameIDSettings"
                android:layout_width="match_parent"
                android:ems="10"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_bg"
                android:hint="EMAIL*"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/advocatePasswordId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Password*"
                android:inputType="textPassword"
                android:paddingLeft="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:inputType="phone"
                android:id="@+id/phoneNumberID"
                android:background="@drawable/edit_text_bg"
                android:hint="Phone*"
                android:paddingLeft="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:inputType="textPhonetic"
                android:id="@+id/cnicNameID"
                android:background="@drawable/edit_text_bg"
                android:hint="CNIC*"
                android:paddingLeft="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:id="@+id/cityNameID"
                android:background="@drawable/edit_text_bg"
                android:hint="CITY*"
                android:paddingLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/experienceNameID"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="EXPERIENCE*"
                    android:paddingLeft="20dp" />

                <EditText
                    android:id="@+id/educationNameID"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="EDUCATION"
                    android:paddingLeft="20dp" />
            </LinearLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:id="@+id/progressBar"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addAdvocateBtnId"
                android:ems="10"
                android:text="Submit"
                android:background="@drawable/btn_bg"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>